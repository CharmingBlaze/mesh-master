{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node", "jest"],
    "typeRoots": ["./lib/types", "./node_modules/@types"]
  },
  "include": ["lib/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "lib/3d-modeler",
    "lib/adapters/babylon.ts",
    "lib/utils.ts"
  ]
}
